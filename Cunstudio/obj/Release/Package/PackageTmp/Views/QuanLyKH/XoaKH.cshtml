@model Cunstudio.Models.KhachHang

@{
    ViewBag.Title = "Xóa khách hàng";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}
<main>
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Xóa khách hàng</h3></div>
                <div class="card-body">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Ten)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Ten)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.SDT)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.SDT)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Email)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.DiaChi)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DiaChi)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.TaiKhoan)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TaiKhoan)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.MatKhau)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.MatKhau)
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group mt-4 mb-0">
                            <input type="submit" name="delete" class="btn btn-danger btn-block" value="Xóa khách hàng" />
                            <input class="btn btn-primary btn-block" onclick="location.href='@Url.Action("DanhSachAnh","QuanLyAnh")'" value="Quay lại!" />
