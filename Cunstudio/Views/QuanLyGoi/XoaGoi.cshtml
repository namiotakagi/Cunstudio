@model Cunstudio.Models.GoiDichVu

@{
    ViewBag.Title = "Xóa gói dịch vụ";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<main>
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Xóa khách hàng</h3></div>
                <div class="card-body">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.TenGoi)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TenGoi)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.DiaDiem)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DiaDiem)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.HoTro)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.HoTro)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.SoTam)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.SoTam)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.GiaTien)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.GiaTien)
                        </dd>

                        @using (Html.BeginForm("XoaGoi", "QuanLyGoi", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group mt-4 mb-0">
                                <input type="submit" name="delete" class="btn btn-danger btn-block" value="Xóa" />
                                <input class="btn btn-primary btn-block" onclick="location.href='@Url.Action("DanhSachGoi","QuanLyGoi")'" value="Quay lại!" />
                            </div>
                        }
                </div>
            </div>
        </div>
    </div>
    </div>
</main>