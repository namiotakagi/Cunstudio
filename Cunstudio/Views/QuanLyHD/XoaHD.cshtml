@model Cunstudio.Models.HopDong

@{
    ViewBag.Title = "Xoá hợp đồng";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}
<main>
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Xóa hợp đồng</h3></div>
                <div class="card-body">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Admin.Ten)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Admin.Ten)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.GoiDichVu.TenGoi)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.GoiDichVu.TenGoi)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.KhachHang.Ten)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.KhachHang.Ten)
                        </dd>

                    </dl>

                    @using (Html.BeginForm("XoaHD", "QuanLyHD", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group mt-4 mb-0">
                            <input type="submit" name="delete" class="btn btn-danger btn-block" value="Xóa" />
                            <input class="btn btn-primary btn-block" onclick="location.href='@Url.Action("DanhSachHD","QuanLyHD")'" value="Quay lại!" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    </div>
</main>